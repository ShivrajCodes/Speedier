{
    "version": 2,
    "builds": [
      {
        "src": "api/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/**/*.js",
        "use": "@vercel/next"
      }
    ],
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/api/index.js"
      }
    ]
  }
  